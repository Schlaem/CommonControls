             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OperatingControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">

    <Viewbox>
        <Canvas Width="200" Height="200">
            <Ellipse Canvas.Bottom="10" Canvas.Left="70" Width="20" Height="20" Fill="Green" StrokeThickness="0" />
            <Ellipse Canvas.Bottom="0" Canvas.Left="90" Width="20" Height="20" Fill="Green" StrokeThickness="0" />
        </Canvas>
    </Viewbox>
</UserControl>
